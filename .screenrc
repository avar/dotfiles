# show some info at the bottom
caption always "%{= kw}%-w%{= gW}%n %t%{-}%+w %-= %{= r}%H%{-} %{= g}%l%{-} %D %Y-%m-%d %c:%s"

# Emacs keybindings on C-a [
markkeys "h=^B:l=^F:$=^E"

# clear the screen properly when vim (et al) exits
altscreen on

# no visual bell, thanks
vbell off

# Without this screen is unusable
nethack on
