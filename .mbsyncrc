FSync no

IMAPAccount personal
    # Generic options
    Timeout 0
    PipelineDepth 100
    # User authentication
    AuthMech LOGIN
    Host imap.gmail.com
    User avarab@gmail.com
    PassCmd "stat --format=%a ~/.password/personal-gmail | grep -qx 600 && cat ~/.password/personal-gmail"
    SSLType IMAPS
    SSLVersions TLSv1.2

IMAPStore personal-remote
    Account personal

MaildirStore personal-local
    Path ~/Maildir/personal-gmail/
    Inbox ~/Maildir/personal-gmail/INBOX

## "Global" Create/Remove/Sync options, applies to Channels
## below. TODO: is ExpireUnread supported?
Create Slave
Remove Slave
Sync Pull New ReNew Flags
Sync Push Delete Flags

Group personal
      Channel personal-INBOX
      Channel personal-git
      Channel personal-longtail

Group personal-common
      Channel personal-INBOX
      Channel personal-git

Channel personal-INBOX
    SyncState *
    Master :personal-remote:
    Slave :personal-local:
    Patterns INBOX
    ## Only get the last 1000, ignoring if they're "unread"
    MaxMessages 10000
    ExpireUnread yes

Channel personal-git
    SyncState *
    Master :personal-remote:
    Slave :personal-local:
    Patterns git
    ## Only get the last 1000, ignoring if they're "unread"
    MaxMessages 10000
    ExpireUnread yes

Channel personal-rest
    SyncState *
    Master :personal-remote:
    Slave :personal-local:
    # INBOX is not matched by wildcards
    Patterns INBOX * !git !INBOX !Trash
