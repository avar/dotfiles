#!/bin/sh
set -e
set -x

junio_tags () {
	git tag -l  --sort=-version:refname --format='%(refname:strip=2) %(taggeremail)' 'v*' |
		grep gitster@pobox.com |
                cut -d ' ' -f 1
}

last_release=$(junio_tags | grep -v -- -rc | head -n 1)
last_tag=$(junio_tags | head -n 1)

last=$last_release
for ref in $last_tag origin/master origin/next origin/seen
do
	git --no-pager shortlog --author=Ã†var $last..$ref "$@"
	last=$ref
done
