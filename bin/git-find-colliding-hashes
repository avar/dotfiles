#!/usr/bin/env perl
use v5.32.0;
use strict;
use warnings;
use Digest::SHA qw(sha1_hex sha256_hex);

$| = 1;
my $s = "a";
my %seen;
my $type = $ENV{type} // "blob";
my $prefix = $ENV{prefix} // "";
while ($s++) {
	my $str = $prefix . $s;
	my $l = length($str) + 1;
	my $p = "$type $l\0$str\n";
	my $o = sha1_hex($p);
	my $n = sha256_hex($p);
	my $os = substr($o, 0, 4);
	my $ns = substr($n, 0, 4);
	if ($os eq $ns) {
		say "hash($str) = [$os, $ns]" . ($seen{$os} ? " SEEN" : "");
		$seen{$os} = 1;
	}
}

