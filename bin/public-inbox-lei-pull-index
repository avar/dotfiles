#!/bin/bash
set -xe

. ~/.bashrc.d/20-public-inbox-lei.sh

repo=~/g/git-ml
cd $repo
while true
do
	oid=$(git rev-parse HEAD)
	git pull
	noid=$(git rev-parse HEAD)
	if test "$oid" = "$noid"
	then
		echo Nothing to update
		sleep 60
		continue
	fi
	public-inbox index -v "$PWD"
	lei up ~/Maildir/lei-q-git-ml
	sleep 1
done
