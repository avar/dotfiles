#!/usr/bin/expect -f

set host [lindex $argv 0]
set pin [lindex $argv 1]
set logincmd [lindex $argv 2]

eval spawn ssh $host
expect {
    "TokenCode:" {
        send_user "Supplying the PIN, Enter the 2FA: "
        send $pin
        stty -echo
        expect_user -re "(.*)\n"
        send_user "\n"
        send "$expect_out(1,string)\r"
        stty echo
        exp_continue
    }
    PROD {
        send $logincmd
        send "\r"
        interact
    }
}
