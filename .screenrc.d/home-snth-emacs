source /home/avar/.screenrc

sessionname hem

screen -t e bash
stuff "(emacsclient --tty || (emacs --daemon && emacsclient --tty))^M"

screen -t l bash
# No idea why I can't run nested screens without remote ssh-ing
stuff "ssh localhost^M"
stuff "screen -rx local || hssnth-local^M"

screen -t log bash
stuff "tail -F /var/log/{syslog,messages,auth.log,user.log,daemon.log,aptitude,kern.log,dpkg.log}^M"

screen -t tc:1 bash
stuff "while test ! -d /media/teracaddy; do sleep 3; done && cd /media/teracaddy/annex/p*/l*/w*/c*^M"

screen -t tc:2 bash
stuff "while test ! -d /media/teracaddy; do sleep 3; done && cd /media/teracaddy/annex/p*/l*/w*/c*^M"

screen -t tc:3 bash
stuff "while test ! -d /media/teracaddy; do sleep 3; done && cd /media/teracaddy/annex/p*/l*/w*/c*^M"

select 0
