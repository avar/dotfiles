source /home/avar/.screenrc

sessionname mail

screen -t exim:l bash
stuff "tail -F /var/log/exim4/mainlog^M"

screen -t md:size bash
stuff "du -sb ~/Maildir/work/; du -sh ~/Maildir/work; find ~/Maildir/work/ -type f | wc -l^M"

screen -t md:find bash
stuff "find ~/Maildir -type f -mmin -5|wc -l # modified in the last 5mins^M"
stuff "find ~/Maildir -type f -cmin -5|wc -l # created in the last 5mins^M"

screen -t mbsync bash
stuff "time mbsync work"

screen -t m:index bash
stuff "mu index"

screen -t m:f:0 bash
stuff "mu find avar^M"

screen -t m:f:1 bash
stuff "mu find booking^M"

screen -t m:f:2 bash
stuff "mu find booking^M"

screen -t m:f:3 bash
stuff "mu find booking^M"

select 0
