[user]
    name = Ævar Arnfjörð Bjarmason
    email = avarab@gmail.com

[color]
    ui = auto

[github]
    login = avar

[alias]
    ;; Lazyness
    ann = blame
    br = branch -a -v
    st = status
    ci = commit
    co = checkout
    sm = submodule
    lo = log --decorate --abbrev-commit --color-words

    ;; Diff
    di  = diff -p --stat --color-words
    dif = diff -p --stat --color-words
    dis = diff -p --stat --color-words --staged
    staged = diff --cached

    ;; Pull/push
    pu = pull --stat
    ; like svn does
    up = pull --stat --rebase

    ;; Handy tools
    tree = log --graph --pretty=oneline --abbrev-commit --decorate
    review = "!f() { for rev in $(git rev-list --reverse \"$@\"); do git show $rev; done; }; f"
    ; Must git branch -d foo first, then git rmbranch foo
    rmbranch = "!f() { git push origin :heads/$@; }; f"

[push]
    default = tracking
